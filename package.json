{
  "name": "rpg-music-app",
  "description": "A simple application to list and play the tracks you want to use in your RPG adventure. The songs fade in and out and run in parallel with each other, which makes it possible to dynamically build encounters and battles.",
  "version": "0.0.1",
  "scripts": {
    "start": "npm run build && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "build": "npm run clean.dev && tsc && npm run build.dev",
    "clean.dev": "gulp clean.dev --gulpfile config/gulpfile.js",
    "build.dev": "gulp build.dev --gulpfile config/gulpfile.js",
    "tsc:w": "tsc -w",
    "lite": "lite-server",
    "postinstall": "typings install",
    "test": "karma start config/karma.conf.js"
  },
  "license": "MIT",
  "repository": "https://github.com/JordyVlassembrouck/RPG-music-app.git",
  "dependencies": {
    "@angular/common": "^2.2.0",
    "@angular/compiler": "^2.2.0",
    "@angular/core": "^2.2.0",
    "@angular/platform-browser": "^2.2.0",
    "@angular/platform-browser-dynamic": "^2.2.0",
    "@angular/http": "^2.2.0",
    "@angular/forms": "^2.2.0",
    "@angular/material": "^2.0.0-alpha.10",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-rc.2",
    "systemjs": "^0.19.41",
    "zone.js": "^0.6.26"
  },
  "devDependencies": {
    "concurrently": "^3.1.0",
    "del": "^2.2.2",
    "gulp": "^3.9.1",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-jasmine": "^1.0.2",
    "lite-server": "^2.2.2",
    "run-sequence": "^1.2.2",
    "typescript": "^2.0.9",
    "typings": "^2.0.0"
  }
}
